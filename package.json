{
  "name": "jp-sentence-segmenter",
  "type": "module",
  "scripts": {
    "dev": "run-p rakkas:dev tsc:dev",
    "tsc": "tsc",
    "tsc:dev": "tsc --noEmit --watch --preserveWatchOutput",
    "ts-node": "node -r esbuild-register",
    "build": "npm run rakkas:build:vercel && mkdir -p .vercel/output/functions/index.func/sudachi && cp sudachi/dist.tar.gz .vercel/output/functions/index.func/sudachi",
    "deploy": "vercel deploy --prebuilt .",
    "deploy:production": "vercel deploy --prebuilt . --prod",
    "rakkas:dev": "rakkas --no-clearScreen --port 3333",
    "rakkas:build": "rakkas build",
    "rakkas:build:vercel": "CONFIG_RAKKAS_ADAPTER=vercel npm run rakkas:build",
    "sudachi:build": "bash sudachi/build.sh",
    "lint": "run-s prettier eslint",
    "lint:check": "run-s prettier:check eslint:check",
    "eslint": "npm run eslint:check -- --fix",
    "eslint:check": "eslint ./src --cache --cache-location node_modules/.cache/.eslintcache --ext .js,.jsx,.ts,.tsx",
    "prettier": "prettier --cache -w .",
    "prettier:check": "prettier --cache -c ."
  },
  "dependencies": {
    "@hattip/response": "^0.0.17",
    "rakkasjs": "^0.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tar": "^6.1.11",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^1.0.2",
    "@types/node": "^16",
    "@types/tar": "^6.1.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "esbuild": "^0.15.9",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4",
    "vite": "^3.1.3",
    "vite-plugin-windicss": "^1.8.8"
  }
}
